FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      boundaryRadiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

wall
{
    type opaqueDiffusive;
    wallAbsorptionEmissionModel
    {
        type constantAbsorption;
        absorptivity 1;
        emissivity    1;
    }
    T T;
}

inlet
{
    type opaqueDiffusive;
    wallAbsorptionEmissionModel
    {
        type constantAbsorption;
        absorptivity 1;
        emissivity    1;
    }
    T T;
}

outlet
{
    type opaqueDiffusive;
    wallAbsorptionEmissionModel
    {
        type constantAbsorption;
        absorptivity 1;
        emissivity    1;
    }
    T T;
}

